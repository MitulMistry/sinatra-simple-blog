<h2>Edit Post:</h2>
<form method="POST" action="/posts/<%= @post.slug %>">
  <label for="title">Title: </label><br>
  <input type="text" id="title" name="post[title]" value="<%= @post.title %>"><br><br>
  <label for="content">Post: </label><br>
  <textarea id="content" name="post[content]" style="width:350px;height:150px;"><%= @post.content %></textarea>

  <h3>Tags:</h3>
  <% if @tags %>
    <% @tags.each do |tag| %>
      <%= tag.name %>
      <input type="checkbox" id="tag<%= tag.id %>" name="post[tag_ids][]" value="<%= tag.id %>" <%= "checked" if @post.tags.any? {|post_tag| post_tag.id == tag.id} %>><br>
    <% end %>
  <% end %>

  <label for="new_tag">New Tag: </label>
  <input type="text" id="new_tag" name="tag[name]"><br><br>

  <input type="submit" value="Submit">
</form>